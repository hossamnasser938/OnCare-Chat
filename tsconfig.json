{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@state": ["src/state"],
      "@state/*": ["src/state/*"],
      "@data-layer": ["src/data-layer"],
      "@data-layer/*": ["src/data-layer/*"],
      "@shared-components": ["src/shared-components"],
      "@shared-components/*": ["src/shared-components/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"]
    }
  }
}
